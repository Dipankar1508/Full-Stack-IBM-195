<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" href="/Stylesheet/style.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body>
    <div class="container">
        <div class="row">
            <h2 class="mt-3 col-4">Product List</h2>
            <form action="/product" method="get" class="mt-3 col-4 ">
                <button class="btn btn-success">Add Products</button>
            </form>
        </div>
        <div class="row">
            <% products.forEach(product=> { %>
                <div class="col-4">
                    <div class="card mb-3 ">
                        <img src="<%= product.link %>" class="card-img-top card-img" alt="<%= product.productName %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= product.productName %>
                            </h5>
                            <p class="card-text">
                                <%= product.category %>
                            </p>
                            <p class="card-text">
                                <%= product.description %>
                            </p>
                            <p class="card-text"><strong>Price: &#8377; <%= product.price %></strong></p>
                            <button class="btn btn-primary addToCart">Add to Cart</button>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
        <div class="d-grid gap-2 col-4 mx-auto my-3">
            <button class="btn btn-warning" type="button">Load More</button>
        </div>

    </div>
    <div class="skeleton">
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
    </div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="/js/script.js"></script>
</body>

</html>